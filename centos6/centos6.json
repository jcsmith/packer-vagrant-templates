{
	"variables":{
		"disk_size": "100000"
	},

	"builders":
	[
		{
			"type": "qemu",
			"iso_url": "http://mirror.vtti.vt.edu/centos/6.7/isos/x86_64/CentOS-6.7-x86_64-minimal.iso",
			"iso_checksum": "9381a24b8bee2fed0c26896141a64b69",
			"iso_checksum_type": "md5",
			"output_directory": "output_centos_tdhtest",
			"ssh_wait_timeout": "30s",
			"disk_size": "{{ user `disk_size`}}",
			"format": "qcow2",
			"headless": false,
			"accelerator": "kvm",
			"http_directory": "http",
			"http_port_min": 10082,
			"http_port_max": 10089,
			"shutdown_command": "shutdown -P now",
			"ssh_username": "root",
			"ssh_password": "vagrant",
			"ssh_port": 22,
			"ssh_wait_timeout": "90m",
			"vm_name": "tdhtest",
			"net_device": "virtio-net",
			"disk_interface": "virtio",
			"boot_wait": "5s",
			"boot_command":
			[
				"<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/template-ks.cfg<enter><wait>"
			]
		}
	],

	"Provisioners": [
		{
			"type": "shell",
			"scripts":[
				"scripts/install_updates.sh"
			]
		}
	]
}
